<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.MainActivity">

    <android.support.v4.widget.DrawerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@id/btn_income"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:text="@string/main_income"/>
            <Button
                android:id="@id/btn_outcome"
                android:layout_marginTop="@dimen/primary_margin"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:text="@string/main_outcome"/>
        </LinearLayout>

        <Button
            android:id="@id/btn_choose_user_account"
            android:layout_width="200dip"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="@string/main_choose_user"
            android:textSize="@dimen/primary_text_size"/>
    </android.support.v4.widget.DrawerLayout>

</RelativeLayout>
